SELECT m.*, c.*
FROM hk_member m, hk_cnsln c
WHERE m.id = c.id(+) AND type = '2'
ORDER BY m.mno

SELECT * FROM hk_cnsln
WHERE id = 'user03'

SELECT m.name, s.*
     	FROM hk_member m, hk_score s
     	WHERE m.id = s.id

SELECT m.name, s.*
     	FROM hk_member m, hk_score s
     	WHERE m.id = s.id
     	ORDER BY m.mno
