--상담테이블

DROP TABLE hk_cnsln;
CREATE TABLE hk_cnsln(
    name VARCHAR2(1000) NOT NULL,
    id VARCHAR2(80) NOT NULL, 
    cnsln1 VARCHAR2(4000),
    cnsln1_date DATE,
    cnsln2 VARCHAR2(4000),
    cnsln2_date DATE,
    cnsln3 VARCHAR2(4000),
    cnsln3_date DATE,
    cnsln4 VARCHAR2(4000),
    cnsln4_date DATE,
    cnsln5 VARCHAR2(4000),
    cnsln5_date DATE,
    cnsln6 VARCHAR2(4000),
    cnsln6_date DATE
);

